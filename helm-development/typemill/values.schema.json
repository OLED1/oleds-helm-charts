{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "replicaCount": {
            "type": "integer",
            "title": "Number of replicas",
            "form": true
        },
        "ingress": {
            "type": "object",
            "title": "Ingress configuration",
            "form" : true,
            "properties": {
                "enabled":{
                    "type":"boolean",
                    "title": "Enable ingress controller",
                    "form": true
                },
                "className":{
                    "type":"string",
                    "title": "Ingress class name",
                    "description": "E.g.: nginx",
                    "form": "true",
                    "path": "ingress/enabled"
                }
            }
        }
    }
}